<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="cadastrar"
    tools:context=".activities.CadastroDeUsuarioActivity">

    <EditText
        android:id="@+id/et_cadastro_usuario_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/et_cadastro_usuario_nome"
        app:layout_constraintStart_toStartOf="@+id/et_cadastro_usuario_nome"
        app:layout_constraintTop_toBottomOf="@+id/et_cadastro_usuario_nome" />

    <EditText
        android:id="@+id/et_cadastro_usuario_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_cadastro_usuario_senha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/et_cadastro_usuario_telefone"
        app:layout_constraintStart_toStartOf="@+id/et_cadastro_usuario_telefone"
        app:layout_constraintTop_toBottomOf="@+id/et_cadastro_usuario_telefone" />

    <EditText
        android:id="@+id/et_cadastro_usuario_telefone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Telefone"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/et_cadastro_usuario_email"
        app:layout_constraintStart_toStartOf="@+id/et_cadastro_usuario_email"
        app:layout_constraintTop_toBottomOf="@+id/et_cadastro_usuario_email" />

    <Button
        android:id="@+id/bt_cadastro_usuario_enviar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="cadastrar"
        android:text="Salvar"
        app:backgroundTint="#2196F3"
        app:layout_constraintEnd_toEndOf="@+id/et_cadastro_usuario_senha"
        app:layout_constraintStart_toStartOf="@+id/et_cadastro_usuario_senha"
        app:layout_constraintTop_toBottomOf="@+id/et_cadastro_usuario_senha" />
</androidx.constraintlayout.widget.ConstraintLayout>